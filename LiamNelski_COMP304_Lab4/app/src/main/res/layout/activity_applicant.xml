<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ApplicantActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/applicantToMainButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Return" />

        <EditText
            android:id="@+id/addApplicantFirstNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Firstname"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/addApplicantLastNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Lastname"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/addApplicantTestCentreEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Test Centre"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/addApplicantButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Applicant" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/applicantRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/applicant_list_item" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>