<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestInfoViewActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <Button
            android:id="@+id/testInfoViewToApplicationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Return" />

        <Button
            android:id="@+id/addTestActivityButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Test" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/testRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="538dp"
            tools:listitem="@layout/test_list_item" />

        <TextView
            android:id="@+id/noTestsMessageTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:text="NO TESTS UNDER APPLICANT"
            android:textAlignment="center"
            android:textSize="24dp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>