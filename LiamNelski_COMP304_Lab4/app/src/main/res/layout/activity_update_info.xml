<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateInfoActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <Button
            android:id="@+id/updateInfoToApplicantButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Return" />

        <EditText
            android:id="@+id/updateApplicantFirstNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="First Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/updateApplicantLastNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Last Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/updateApplicantTestCentreEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Test Centre"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/updateApplicantButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Applicant" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>